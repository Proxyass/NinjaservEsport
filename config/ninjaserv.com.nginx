upstream rails_app_ninjaserv_com {
  server unix:///var/www/NinjaServ/shared/tmp/sockets/puma.sock fail_timeout=0;
}

server {
  listen 80;
  server_name ninjaserv.com;

  include /etc/nginx/sites-available/letsencrypt-acme;

  if ($uri !~ (/.well-known/acme-challenge/.*)) {
    return  301 https://$server_name$request_uri;
  }
}

server {
  listen 443 ssl http2;
  server_name ninjaserv.com;

  root /var/www/NinjaServ/current/public/;
  access_log /var/www/NinjaServ/current/log/nginx.access.log;
  error_log /var/www/NinjaServ/current/log/nginx.error.log info;

  try_files $uri/index.html $uri @rails_app_ninjaserv_com;

  ### SSL cert files ###
  ssl_certificate /etc/letsencrypt/live/ninjaserv.com/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/ninjaserv.com/privkey.pem;

  location /.well-known/apple-developer-merchantid-domain-association {
    alias /var/www/html/.well-known/apple-developer-merchantid-domain-association;
  }

  location @rails_app_ninjaserv_com {
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;
    proxy_set_header Host $http_host;
    proxy_redirect off;

    proxy_pass http://rails_app_ninjaserv_com;
  }

  location ~* \.(js|css|png|jpg|jpeg|gif|ico)$ {
    expires 1y;
    log_not_found off;
  }
  location /fonts {
    alias /var/www/NinjaServ/current/vendor/assets/fonts;
  }
}
