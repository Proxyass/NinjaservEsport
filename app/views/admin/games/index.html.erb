<section class="mt-4">
  <% flash.each do |key, value| %>
  <div id="error_explanation" class="alert alert-<%=key%>" role="alert">
    <p>
      <%= value %>
    </p>
  </div>
  <% end %>
</section>
<section class="mt-4">
  <div class="table-responsive">
    <table class="table table-striped">
      <thead class="thead-dark">
        <tr>
          <th scope="col" class="text-left">#</th>
          <th scope="col" class="text-left">Name</th>
          <th scope="col" class="text-center">Description</th>
          <th scope="col" class="text-center">Team based</th>
          <th scope="col" class="text-right">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @games.each do |game| %>
        <tr>
          <th class="text-left align-middle" scope="row"><%= game.id %></th>
          <td class="text-left align-middle"><%= game.name.capitalize %></td>
          <td class="text-left w-50 p-3 align-middle"><%= game.description.capitalize %></td>
          <td class="text-center align-middle">
            <% if game.team_based %>
            <span class="badge badge-info"><%= game.team_based %></span>
            <% else %>
            <span class="badge badge-secondary"><%= game.team_based %></span>
            <% end %>
          </td>
          <td class="text-right align-middle">
            <%= link_to 'Edit', edit_admin_game_path(game.id), :class => "btn btn-sm btn-primary" %>
            <%= link_to 'Delete', admin_game_delete_path(game.id), :class => "btn btn-sm btn-danger" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
