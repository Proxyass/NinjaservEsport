<section class="mt-4">
  <% flash.each do |key, value| %>
  <div id="error_explanation" class="alert alert-<%=key%>" role="alert">
    <p>
      <%= value %>
    </p>
  </div>
  <% end %>
</section>
<section class="mt-4">
  <%= render 'news_menu' %>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead class="thead-dark">
        <tr>
          <th scope="col" class="text-left">#</th>
          <th scope="col" class="text-left">Title</th>
          <th scope="col" class="text-center">Caption</th>
          <th scope="col" class="text-center">Visible</th>
          <th scope="col" class="text-right">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @news.each do |news| %>
        <tr>
          <th class="text-left align-middle" scope="row"><%= news.id %></th>
          <td class="text-left align-middle"><%= news.title.capitalize %></td>
          <td class="text-left w-50 p-3 align-middle"><%= news.caption.capitalize %></td>
          <td class="text-center align-middle">
            <% if news.visible %>
            <span class="badge badge-info"><%= news.visible %></span>
            <% else %>
            <span class="badge badge-secondary"><%= news.visible %></span>
            <% end %>
          </td>
          <td class="text-right align-middle">
            <%= link_to 'Edit', edit_admin_news_path(news.id), :class => "btn btn-sm btn-primary" %>
            <%= link_to 'Delete', admin_news_delete_path(news.id), :class => "btn btn-sm btn-danger" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
