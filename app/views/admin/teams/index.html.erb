<section class="mt-4">
  <% flash.each do |key, value| %>
  <div id="error_explanation" class="alert alert-<%=key%>" role="alert">
    <p>
      <%= value %>
    </p>
  </div>
  <% end %>
</section>
<section class="mt-4">
  <%= render 'team_menu' %>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead class="thead-dark">
        <tr>
          <th scope="col" class="text-left">#</th>
          <th scope="col" class="text-left">Title</th>
          <th scope="col" class="text-center">Description</th>
          <th scope="col" class="text-right">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @teams.each do |team| %>
        <tr>
          <th class="text-left align-middle" scope="row"><%= team.id %></th>
          <td class="text-left align-middle"><%= team.name.capitalize %></td>
          <td class="text-left w-50 p-3 align-middle"><%= team.description.capitalize %></td>
          <td class="text-right align-middle">
            <%= link_to 'Edit', edit_admin_team_path(team.id), :class => "btn btn-sm btn-primary" %>
            <%= link_to 'Delete', admin_team_delete_path(team.id), :class => "btn btn-sm btn-danger" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
